<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:paddingTop="@dimen/spacing_medial_24"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingBottom="@dimen/spacing_small_8"
                android:background="@drawable/header_bg">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/user_photo_drawer_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/android_lollipop"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
            <TextView
                android:id="@+id/user_name_txt"
                style="@style/text_field_grey.14sp"
                android:text="@string/app_name"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/user_email_txt"
                style="@style/text_field_grey.14sp"
                android:text="@string/mail_value_et"
                android:fontFamily="sans-serif"/>
    </LinearLayout>

</RelativeLayout>